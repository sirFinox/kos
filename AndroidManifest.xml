<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.kos"
    android:sharedUserId="com.kos"
    android:versionCode="1"
    android:versionName="1" >

    <uses-sdk
        android:minSdkVersion="7"
        android:targetSdkVersion="16" />

    <uses-permission android:name="android.permission.READ_CALENDAR" />
    <uses-permission android:name="android.permission.WRITE_CALENDAR" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.AUTHENTICATE_ACCOUNTS" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.USE_CREDENTIALS" />
    <uses-permission android:name="android.permission.MANAGE_ACCOUNTS" />
    <uses-permission android:name="android.permission.WRITE_SETTINGS" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.WRITE_CONTACTS" />
    <uses-permission android:name="android.permission.READ_SYNC_STATS" />
    <uses-permission android:name="android.permission.READ_SYNC_SETTINGS" />
    <uses-permission android:name="android.permission.WRITE_SYNC_SETTINGS" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/ExampleTheme" >
        <activity
            android:name="com.kos.cvut.activity.MainActivity"
            android:configChanges="orientation|screenSize|screenLayout"
            android:theme="@style/Theme.Sherlock.Light.DarkActionBar"
            android:uiOptions="splitActionBarWhenNarrow" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".cvut.anim.CustomScaleAnimation" />
        <activity android:name=".cvut.anim.CustomZoomAnimation" />
        <activity android:name=".cvut.anim.CustomRotateAnimation" />
        <activity android:name=".cvut.anim.CustomSlideAnimation" />
        <activity android:name=".cvut.activity.FragmentChangeActivity" />
        <activity android:name=".cvut.activity.ResponsiveUIActivity" />
        <activity android:name="com.crittercism.NotificationActivity" />
        <activity android:name=".authentification.authenticator.AuthenticatorActivity" />

        <service
            android:name="com.kos.authentification.authenticator.AuthenticationService"
            android:exported="true" >
            <intent-filter>
                <action android:name="android.accounts.AccountAuthenticator" />
            </intent-filter>

            <meta-data
                android:name="android.accounts.AccountAuthenticator"
                android:resource="@xml/authenticator" />
        </service>

        <activity
            android:name="com.kos.cvut.activity.SearchCourseResultsActivity"
            android:label="@string/title_activity_search_course_results" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.kos.cvut.activity.MainActivity" />
        </activity>
        <activity
            android:name="com.kos.cvut.activity.SearchCourseDetailsActivity"
            android:label="@string/title_activity_search_course_details" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.kos.cvut.activity.SearchCourseResultsActivity" />
        </activity>
        <activity
            android:name="ccom.kos.cvut.activity.SearchPeopleResultsActivity"
            android:label="@string/title_activity_search_people_results" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.kos.cvut.activity.MainActivity" />
        </activity>
        <activity
            android:name="com.kos.cvut.activity.SearchPeopleDetailsActivityity"
            android:label="@string/title_activity_search_people_details" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.kos.cvut.activity.SearchPeopleResultsActivity" />
        </activity>
        <activity
            android:name="com.kos.cvut.activity.CoursesActivity"
            android:label="@string/registered_courses" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.kos.cvut.activity.MainActivity" />
        </activity>
        <activity android:name="kos.cvut.getdata.TimetableSlot" >
        </activity>
        <activity android:name="com.kos.cvut.activity.CoursesListActivity" >
        </activity>
    </application>

</manifest>